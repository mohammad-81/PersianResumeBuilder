@model PersianResumeBuilder.Entities.Customer


<p>Login mammas</p>


<form asp-action="ResultOrder" asp-controller="Orders" method="post">
    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
            انتخاب گزینه
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">صورتحساب مشتری</a></li>
            <li><a class="dropdown-item" href="#">گزینه دیگر</a></li>
        </ul>
    </div>
    <div class="container mt-5">
        <h2 class="text-center">فرم صورتحساب</h2>
        <form>
            <div class="mb-3">
                <label class="form-label" asp-for="FullName"></label>
                <input type="text" class="form-control" asp-for="FullName">
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="ItemOrder"></label>
                <textarea class="form-control" rows="3" asp-for="ItemOrder"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Price"></label>
                <input type="text" class="form-control" asp-for="Price">
            </div>
            <button type="submit" class="btn btn-primary">ارسال صورتحساب</button>
        </form>
    </div>
</form>
<img src="~/linkedin.png" />

