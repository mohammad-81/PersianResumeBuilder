@model List<PersianResumeBuilder.Entities.InformationCustomerProfile >


@if (Model != null && Model.Any())
{
    @foreach (var userProfile in Model)
    {

<div class="card" style="max-width: 900px; margin: auto; border: 1px solid #ddd; border-radius: 10px;">
    <div class="card-body">
        <!-- ردیف شامل اطلاعات کاربری و پست -->
        <div class="row">
            <!-- ستون اطلاعات کاربری -->
            <div class="col-md-4 d-flex align-items-center">
                <div>
                    <img src="/@userProfile.profileImage" class="rounded-circle mb-3" alt="Profile" style="width: 80px; height: 80px;">
                    <h5 class="card-title">@userProfile.Name</h5>
                    <small class="text-muted">موقعیت شغلی - شرکت :@userProfile.JobPosition </small>
                    <div class="mt-3">
                        <p><strong>سن:@userProfile.Age</strong></p>
                        <p><strong>تاریخ تولد:</strong> @userProfile.DateOfBirth</p>
                    </div>
                </div>
            </div>

            <!-- ستون پست -->
            <div class="col-md-8">
                <p class="card-text">
                    :)خوشحال میشم نظرتون رو در رابطه با پست بازنشر بدید و این پست رو با لایک و اشتراک گذاری هاتون حمایت کنید
                </p>
                <img src="/@userProfile.PostImage" class="img-fluid rounded" alt="Post Image">
                <div class="mt-3">
                    <button class="btn btn-outline-primary btn-sm">@userProfile.Like</button>
                    <button class="btn btn-outline-secondary btn-sm">@userProfile.Comment</button>
                    <button class="btn btn-outline-secondary btn-sm">@userProfile.Share</button>
                </div>
            </div>
        </div>
    </div>
</div>
    }
}

else
{

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پیدا نشدن صفحه</title>
    <!-- اضافه کردن لینک بوت استرپ -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="alert alert-danger text-center" role="alert">
            <h4 class="alert-heading">404 - صفحه مورد نظر پیدا نشد!</h4>
            <p>متاسفانه صفحه‌ای که دنبال آن هستید وجود ندارد یا ممکن است حذف شده باشد.</p>
            <hr>
            <p class="mb-0">برای بازگشت به صفحه اصلی، لطفاً <a href="/" class="alert-link">اینجا کلیک کنید</a>.</p>
        </div>
    </div>

    <!-- اضافه کردن لینک جاوااسکریپت بوت‌استرپ -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

}